<div class="container">
  <div class="recap_offer">
  </div>
  <div class="container">
    <div class="form-wrapper" style="width: 600px; margin: 0 auto;">
      <h2>Book your midget !</h2>

      <%= simple_form_for [@offer, @reservation] do |f| %>
        <%= f.input :specs, input_html: {class: "datepicker, pb-5"}, placeholder: "Write the misssions you want the midget to do" %>
        <%= f.input :start_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :end_date, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.button :submit, "Go", class: "btn btn-primary mt-3" %>
      <% end %>
    </div>
  </div>
</div>
