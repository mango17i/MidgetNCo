<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="/">
    <img id="logo" src="https://risibank.fr/cache/stickers/d1387/138733-full.png" />
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Choose your Midget", offers_path, class: "btn btn-success m-1 btn-green" %>
        </li>
        <li class="nav-item dropdown">
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://i.ibb.co/f02mmVY/145783068-248787803321565-2439862427518682230-n.png" />
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Userpage", user_path(current_user.id), class: "dropdown-item" %>
            <%= link_to "Create new offer", user_signed_in? ? new_offer_path : new_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
    </ul>
    <% else %>
      <li>
        <%= link_to "Log in", user_session_path, class: "btn btn-success m-1" %>
      </li>
      <li>
        <%= link_to "Sign up", new_user_registration_path, class: "btn btn-success m-1" %>
      </li>
    <% end %>
  </div>
</div>
